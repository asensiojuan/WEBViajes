@model WEBViajes.Models.Viaje

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Nuevo Viaje</h2>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div class="row g-2">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Fecha" class="form-label">Fecha</label>
                        <input asp-for="Fecha" class="form-control" type="date" required />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="ClienteId" class="form-label">Cliente</label>
                        <select asp-for="ClienteId" class="form-select" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "Nombre"))" required>
                            <option value="">Seleccione un cliente</option>
                        </select>
                        <span asp-validation-for="ClienteId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="ChoferId" class="form-label">Chofer</label>
                        <select asp-for="ChoferId" class="form-select" asp-items="@(new SelectList(ViewBag.Choferes, "Id", "Nombre"))" required>
                            <option value="">Seleccione un chofer</option>
                        </select>
                        <span asp-validation-for="ChoferId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Origen" class="form-label">Origen</label>
                        <input asp-for="Origen" class="form-control" required />
                        <span asp-validation-for="Origen" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Destino" class="form-label">Destino</label>
                        <input asp-for="Destino" class="form-control" required />
                        <span asp-validation-for="Destino" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Pasajero" class="form-label">Pasajero</label>
                        <input asp-for="Pasajero" class="form-control" required />
                        <span asp-validation-for="Pasajero" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="KM" class="form-label">KM</label>
                        <input asp-for="KM" class="form-control" type="number" min="0" required />
                        <span asp-validation-for="KM" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Total" class="form-label">Total</label>
                        <input asp-for="Total" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="Total" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="LinkPago" class="form-label">Link de Pago</label>
                        <input asp-for="LinkPago" class="form-control" />
                        <span asp-validation-for="LinkPago" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="NumeroFactura" class="form-label">Número de Factura</label>
                        <input asp-for="NumeroFactura" class="form-control" />
                        <span asp-validation-for="NumeroFactura" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Pagado" class="form-check-label">Pagado</label>
                        <input asp-for="Pagado" class="form-check-input" type="checkbox" />
                    </div>
                </div>
            </div>

            <div class="form-group mt-4 d-flex flex-column flex-md-row gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}