@{
    ViewData["Title"] = "Choferes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Lista de Choferes</h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus"></i> Nuevo Chofer
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Licencia</th>
                                    <th>Teléfono</th>
                                    <th>Vehículo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model ?? Enumerable.Empty<dynamic>())
                                {
                                    <tr>
                                        <td>@item.Nombre</td>
                                        <td>@item.NumeroLicencia</td>
                                        <td>@item.Telefono</td>
                                        <td>@item.Vehiculo</td>
                                        <td>
                                            <span class="badge bg-@(item.Disponible ? "success" : "danger")">
                                                @(item.Disponible ? "Disponible" : "No Disponible")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>