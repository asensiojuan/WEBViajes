@model IEnumerable<WEBViajes.Models.Chofer>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h2 class="mb-0">Lista de Choferes</h2>
    </div>
    <div class="card-body">
        <a asp-action="Create" class="btn btn-primary mb-3">Nuevo Chofer</a>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var chofer in Model)
                    {
                        <tr>
                            <td>@chofer.Nombre</td>
                            <td>@chofer.Apellido</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@chofer.Id" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@chofer.Id" class="btn btn-danger btn-sm">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>