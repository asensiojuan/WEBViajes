<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - Advance Translados</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEBViajes.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <!-- Sidebar mejorado -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-car-front-fill me-2"></i>Advance Translados
                </a>
            </div>
            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Viajes" ? "active" : "")"
                       asp-area="" asp-controller="Viajes" asp-action="Index">
                        <i class="bi bi-journal-text"></i>Viajes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Clientes" ? "active" : "")"
                       asp-area="" asp-controller="Clientes" asp-action="Index">
                        <i class="bi bi-people-fill"></i>Clientes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Choferes" ? "active" : "")"
                       asp-area="" asp-controller="Choferes" asp-action="Index">
                        <i class="bi bi-person-badge-fill"></i>Choferes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() != "Privacy" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door-fill"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item mt-auto">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Privacy" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-lock"></i>Privacy
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Contenido principal -->
        <div class="content" id="content">
            <button class="btn toggle-btn" type="button" id="sidebarToggle" aria-label="Toggle navigation">
                <i class="bi bi-list"></i>
            </button>
            <main role="main" class="py-4 px-3 px-md-4 flex-grow-1">
                <div class="container-fluid px-0">
                    <h2 class="mb-4 page-title">@ViewData["Title"]</h2>
                    @RenderBody()
                </div>
            </main>

            <footer class="border-top footer text-muted bg-light py-2">
                <div class="container-fluid px-3">
                    © 2025 - Advance Translados - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
